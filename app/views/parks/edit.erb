<h2>Edit a Dog Park</h2>

<form method="POST" action="/parks/<%= @park.id %>"> 
<input type="hidden" id='hidden' name="_method" value="PATCH">
    <label>Name: <input type="text" name="name" value="<%= @park.name %>"></label>
    <label>Location: <input type="text" name="location" value="<%= @park.location %>"</label>
    <label>Description: <textarea name="description" cols="30" rows="10"><%= @park.description %></textarea></label>
    <input type="submit">
</form>

<p><form method="POST" action="/parks/<%= @park.id %>">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete Park">
  </form></p>

  <a href="/parks/<%= @park.id %>">Cancel</a>